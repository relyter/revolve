<includes>

	<include name="View_50_List">
	
		<description>List View (id=50)</description>

	<controls>

		<include>GlobalBackground</include>

		<control type="image">
			  <description>settings bg</description>
			  <posx>0</posx>
			  <posy>0</posy>
			  <visible>true</visible>
			  <colordiffuse>FanartDiffuse</colordiffuse>
			  <aspectratio>keep</aspectratio>
		</control>

		<control type="group">
			<description>Ring</description>
			<animation effect="slide" tween="quadratic" easing="out" start="-1000,0" end="0,0" time="500" reversible="false">WindowOpen</animation>
			<animation effect="slide" delay="500" tween="quadratic" easing="in" start="0,0" end="-1000,0" time="500" reversible="false">WindowClose</animation>
			
			<control type="image">
				<width>900</width>
				<height>1080</height>
				<texture backgroud="true" diffuse="maskleft.png">white.png</texture>
				<aspectratio scalediffuse="false">scale</aspectratio>
				<colordiffuse>DefaultColor</colordiffuse>
			</control>
			
			<control type="image">
				<width>900</width>
				<height>1080</height>
				<texture>ringsleft.png</texture>
			</control>
			
			<control type="image">
				<posx>-100</posx>
				<posy>330</posy>
				<width>662</width>
				<height>662</height>
				<texture backgroud="true">$INFO[Container(300).ListItem.Property(inCircle)]</texture>
				<fadetime>500</fadetime>
				<colordiffuse>55000000</colordiffuse>
			</control>

			</control>
		
		<include>Revolve_Home</include>

		<control type="list" id="50">
			<posx>330</posx>
			<posy>57</posy>
			<width>960</width>
			<height>966</height>
			<onleft>9000</onleft>
			<onright>60</onright>
			<onup>50</onup>
			<ondown>50</ondown>
			<pagecontrol>60</pagecontrol>
			<viewtype label="535">list</viewtype>
			<scrolltime>200</scrolltime>
			<animation type="Conditional" condition="ControlGroup(9000).HasFocus()">
				<effect type="fade" start="100" end="50" time="200" />
				<effect type="zoom" center="1290,540" start="100" end="90" time="200" />
			</animation>

			<itemlayout width="960" height="69">

				<control type="image">
					<width>960</width>
					<height>66</height>
					<texture border="2">other_textures/ButtonNF.png</texture>
				</control>

				<control type="label">
					<posx>30</posx>
					<width>900</width>
					<font>Medium</font>
					<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, - ]</label>
				</control>

			</itemlayout>

			<focusedlayout width="960" height="69">

				<control type="image">
					<width>960</width>
					<height>66</height>
					<texture border="5">other_textures/ButtonFo.png</texture>
					<animation effect="fade" start="100" end="50" condition="!Control.HasFocus(50)">Conditional</animation>
				</control>

				<control type="label">
					<posx>30</posx>
					<width>900</width>
					<font>Medium</font>
					<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, - ]</label>
				</control>

			</focusedlayout>

		</control>

		<control type="image">
			<visible>Control.IsVisible(50)</visible>
			<posx>1380</posx>
			<posy>210</posy>
			<width>480</width>
			<height>660</height>
			<fadetime>100</fadetime>
			<aspectratio align="left" aligny="center">keep</aspectratio>
			<texture fallback="DefaultAddonNone.png">$INFO[ListItem.Icon]</texture>
			<bordertexture border="5">other_textures/ButtonFo.png</bordertexture>
			<bordersize>12</bordersize>
			<visible>!IsEmpty(ListItem.Icon)</visible>
		</control>

		<control type="scrollbar" id="60">
			<posx>1317</posx>
			<posy>51</posy>
			<height>978</height>
			<onleft>50</onleft>
			<onright>9000</onright>
			<visible allowhiddenfocus="true">Control.HasFocus(60) | Container(50).Scrolling</visible>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Container.Scrolling">Conditional</animation>
		</control>

	</include>

</includes>
