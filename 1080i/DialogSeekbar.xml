			<width>1920</width>
			<height>1080</height>
			<animation effect="fade" start="0" end="100" time="250" reversible="false">WindowOpen</animation>
			<animation effect="fade" delay="1000" start="100" end="0" time="250" reversible="false">WindowClose</animation>
			
			<control type="group">
