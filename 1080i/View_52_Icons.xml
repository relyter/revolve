<includes>
	<include name="View_52_Icons">
		<control type="panel" id="52">
			<description>Panel View (id=52)</description>
			<posx>60</posx>
			<posy>30</posy>
			<width>1920</width>
			<height>898</height>
			<onleft>9000</onleft>
			<onright>60</onright>
			<onup>52</onup>
			<ondown>52</ondown>
			<scrolltime tween="sine" easing="out">200</scrolltime>
			<viewtype label="Icons">icon</viewtype>
			<pagecontrol>60</pagecontrol>
			<itemlayout height="300" width="300">
				<control type="image">
					<description>current item shadow</description>
					<posx>-15</posx>
					<posy>-15</posy>
					<width>330</width>
					<height>330</height>
					<texture background="true">circleshadow.png</texture>
					<animation effect="fade" center="auto" start="0" end="100" time="200" reversible="false">Focus</animation>
					<animation effect="fade" center="auto" start="100" end="0" time="200" reversible="false">UnFocus</animation>
				</control>
				<control type="image">
					<description>item poster</description>
					<posx>22</posx>
					<posy>22</posy>
					<width>256</width>
					<height>256</height>
					<texture border="5" background="true" diffuse="circlemask.png">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
				</control>
				<control type="image">
					<description>item thumb if episodes</description>
					<visible>Container.Content(episodes)</visible>
					<posx>22</posx>
					<posy>22</posy>
					<width>256</width>
					<height>256</height>
					<texture border="5" background="true" diffuse="circlemask.png">$INFO[ListItem.Art(thumb)]</texture>
					<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
				</control>
				<control type="image">
					<description>color overlay</description>
					<animation effect="fade" end="75" condition="true">Conditional</animation>
					<posx>22</posx>
					<posy>22</posy>
					<width>256</width>
					<height>256</height>
					<texture border="5" background="true">circlemask.png</texture>
					<colordiffuse>DefaultColor</colordiffuse>
				</control>
				<control type="image">
					<description>watched overlay</description>
					<posx>20</posx>
					<posy>20</posy>
					<width>260</width>
					<height>260</height>
					<texture border="5" background="true" diffuse="circlemask.png">$INFO[ListItem.Overlay]</texture>
					<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
					<colordiffuse>77000000</colordiffuse>
				</control>
				<control type="image">
					<description>border</description>
					<posx>20</posx>
					<posy>20</posy>
					<width>260</width>
					<height>260</height>
					<texture background="true">circleborder.png</texture>
					<colordiffuse>DefaultColor</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
			</itemlayout>
			<focusedlayout height="310" width="310">
				<control type="group">
					<animation effect="slide" start="0,31" end="0,0" time="200" reversible="false" condition="Container(52).OnScrollNext">Focus</animation>
					<animation effect="slide" start="0,0" end="0,-35" time="200" reversible="false" condition="Container(52).OnScrollNext">UnFocus</animation>
					<animation effect="slide" start="0,-31" end="0,0" time="200" reversible="false" condition="Container(52).OnScrollPrevious">Focus</animation>
					<animation effect="slide" start="0,-62" end="0,-35" time="200" reversible="false" condition="Container(52).OnScrollPrevious">UnFocus</animation>
				<control type="image">
					<description>current item shadow</description>
					<posx>-20</posx>
					<posy>-20</posy>
					<width>340</width>
					<height>340</height>
					<texture background="true">circleshadow.png</texture>
					<animation effect="fade" center="auto" start="0" end="100" time="200" reversible="false">Focus</animation>
					<animation effect="fade" center="auto" start="100" end="0" time="200" reversible="false">UnFocus</animation>
				</control>
				<control type="image">
					<description>current item poster</description>
					<posx>12</posx>
					<posy>12</posy>
					<width>278</width>
					<height>278</height>
					<texture background="true" diffuse="circlemask.png">$INFO[ListItem.Art(poster)]</texture>
					<aspectratio scalediffuse="false" aligny="center">scale</aspectratio>
					<!-- <aspectratio scalediffuse="false" aligny="center">strech</aspectratio> -->
				</control>
				<control type="image">
					<description>item thumb if episodes</description>
					<visible>Container.Content(episodes)</visible>
					<posx>12</posx>
					<posy>12</posy>
					<width>278</width>
					<height>278</height>
					<texture border="5" background="true" diffuse="circlemask.png">$INFO[ListItem.Art(thumb)]</texture>
					<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
				</control>
				<control type="image">
					<description>smooth move</description>
					<posx>12</posx>
					<posy>12</posy>
					<width>278</width>
					<height>278</height>
					<texture background="true">circlemask.png</texture>
					<colordiffuse>DefaultColor</colordiffuse>
					<animation effect="fade" center="auto" start="75" end="0" time="200" reversible="false">Focus</animation>
					<animation effect="fade" center="auto" start="0" end="75" time="200" reversible="false">UnFocus</animation>
				</control>
				<control type="image">
					<description>current item watched overlay</description>
					<posx>10</posx>
					<posy>10</posy>
					<width>280</width>
					<height>280</height>
					<texture background="true" diffuse="circlemask.png">$INFO[ListItem.Overlay]</texture>
					<aspectratio scalediffuse="false" aligny="top">scale</aspectratio>
					<colordiffuse>55FFFFFF</colordiffuse>
				</control>
				<control type="image">
					<description>drop border</description>
					<posx>10</posx>
					<posy>10</posy>
					<width>280</width>
					<height>280</height>
					<texture background="true">circleborder.png</texture>
					<colordiffuse>DefaultColor</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				</control>
			</focusedlayout>
		</control>
		<control type=group>
			<description>labels</description>
			<visible>Control.IsVisible(52)</visible>
			<control type="label">
				<description>item title</description>
				<posx>90</posx>
				<posy>960</posy>
				<width>1350</width>
				<height>60</height>
				<aligny>center</aligny>
				<font>HomeMedium</font>
				<textcolor>TextFocus</textcolor>
				<info>ListItem.Label</info>
				<scroll>true</scroll>
			</control>
			<control type="label">
				<description>1st line item infolabels</description>
				<visible>Container.Content(Movies)</visible>
				<posx>1450</posx>
				<posy>940</posy>
				<width>450</width>
				<height>60</height>
				<alignx>right</alignx>
				<aligny>center</aligny>
				<font>HomeMediumSmall</font>
				<textcolor>TextFocus</textcolor>
				<label>$INFO[Container(52).ListItem.year], $INFO[Container(52).ListItem.Duration] min, $INFO[Container(52).ListItem.VideoResolution]</label>
			</control>
			<control type="label">
				<description>2nd line item infolabels</description>
				<visible>Container.Content(Movies)|Container.Content(tvshows)</visible>
				<posx>1450</posx>
				<posy>980</posy>
				<width>450</width>
				<height>60</height>
				<alignx>right</alignx>
				<aligny>center</aligny>
				<font>HomeMediumSmaller</font>
				<textcolor>TextFocus</textcolor>
				<label>IMDB: $INFO[Container(52).ListItem.Rating],  $INFO[Container(52).ListItem.Mpaa]</label>
			</control>
			<control type="label">
				<description>1st line item infolabels</description>
				<visible>Container.Content(tvshows)</visible>
				<posx>1450</posx>
				<posy>940</posy>
				<width>450</width>
				<height>60</height>
				<alignx>right</alignx>
				<aligny>center</aligny>
				<font>HomeMediumSmaller</font>
				<textcolor>TextFocus</textcolor>
				<label>$INFO[Container(52).ListItem.year], $LOCALIZE[31048]$INFO[Container(52).ListItem.Property(TotalEpisodes)] / $INFO[Container(52).ListItem.Property(UnWatchedEpisodes)]</label>
			</control>
			<control type="label">
				<description>1st line item infolabels</description>
				<visible>Container.Content(seasons)</visible>
				<posx>1450</posx>
				<posy>940</posy>
				<width>450</width>
				<height>60</height>
				<alignx>right</alignx>
				<aligny>center</aligny>
				<font>HomeMediumSmaller</font>
				<textcolor>TextFocus</textcolor>
				<label>$LOCALIZE[31048]$INFO[Container(52).ListItem.Property(TotalEpisodes)] / $INFO[Container(52).ListItem.Property(UnWatchedEpisodes)]</label>
			</control>
			<control type="label">
				<description>1st line item infolabels</description>
				<visible>Container.Content(episodes)</visible>
				<posx>1450</posx>
				<posy>940</posy>
				<width>450</width>
				<height>60</height>
				<alignx>right</alignx>
				<aligny>center</aligny>
				<font>HomeMediumSmaller</font>
				<textcolor>TextFocus</textcolor>
				<label>$INFO[Container(52).ListItem.premiered] IMDB: $INFO[Container(52).ListItem.Rating]</label>
			</control>
		</control>	
		<control type="scrollbar" id="60">
			<animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
			<animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
			<posx>1910</posx>
			<posy>40</posy>
			<width>20</width>
			<height>1000</height>
			<texturesliderbackground>-</texturesliderbackground>
			<texturesliderbar>-</texturesliderbar>
			<texturesliderbarfocus>-</texturesliderbarfocus>
			<textureslidernib>-</textureslidernib>
			<textureslidernibfocus>scrollbarmark.png</textureslidernibfocus>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<onleft>52</onleft>
			<onright>-</onright>
		</control>

	</include>
</includes>